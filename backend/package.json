{
  "name": "mangues-quiz-backend",
  "version": "1.0.0",
  "description": "Backend API para o Mundo dos Mangues PWA",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "db:init": "psql -d mangues_quiz -f database/init.sql",
    "db:reset": "psql -d mangues_quiz -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:init"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}